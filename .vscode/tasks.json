{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/ExinServer.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test",
            "command": "dotnet",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/ExinServer.Test"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
